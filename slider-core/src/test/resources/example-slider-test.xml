<!-- Slider test options -->
  
  <!--
  This is an example of a slider XML test file; it propagates
  to the dependent modules so can be a single place to keep
  test information
  -->
<configuration>

  <property>
    <name>slider.test.timeout.seconds</name>
    <description></description>
    <value>600</value>
  </property>

  <property>
    <name>slider.test.thaw.wait.seconds</name>
    <description>Time to wait for a start to work</description>
    <value>60</value>
  </property>

  <property>
    <name>slider.test.freeze.wait.seconds</name>
    <description>Time to wait for a stop to work</description>
    <value>60</value>
  </property>

</configuration>
